        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeArtista)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.NomeGenero)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.NomeGenero)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.DataCadastro)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.DataCadastro)
        </dd>
        <dt class = "col-sm-2">
            @Html.DisplayNameFor(model => model.Preco)
        </dt>
        <dd class = "col-sm-10">
            @Html.DisplayFor(model => model.Preco)
        </dd>
